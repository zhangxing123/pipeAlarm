<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_home_main"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray">
  <ImageView
      android:id="@+id/IV_task_item"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_marginTop="10dp"
      android:scaleType="fitXY"/>
  <TextView
      android:id="@+id/TV_describe"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/IV_task_item"
      android:layout_marginTop="5dp"
      android:textSize="16sp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="5dp"
      android:text="aaa任务描述"
      />
    <TextView
        android:id="@+id/tx_tre_num"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_describe"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:text="终端编号"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tx_tre_num"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="2007-07-19 00:00:00"
        />
<TextView
    android:id="@+id/tv_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_time"
    android:layout_marginTop="5dp"
    android:gravity="right"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:text="dizhi"
    />

</RelativeLayout>